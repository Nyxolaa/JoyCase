@using JoyCase.App.Models.ProductModel
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-4">
    <h2 class="text-center">Ürünler</h2>
    <div class="text-end mb-3">
        <a class="btn btn-success" asp-controller="Product" asp-action="Create">Yeni Ürün Oluştur</a>
    </div>
    <ul class="list-group">
        @foreach (var product in ViewBag.Products as List<GetProductResponseModel>)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@product.ProductName</strong> - @product.Price TL
                </div>
                <div>
                    <strong>@product.CategoryName</strong>
                </div>
                <div>
                    <strong>@product.Description</strong>
                </div>
                <div>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Sil</a>
                </div>
            </li>
        }
    </ul>
</section>
