 @using JoyCase.App.Models.CategoryModel
@using JoyCase.App.Models.ProductModel
@{
    ViewData["Title"] = "JoyCase By B.H.A.";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <!-- Kategoriler Kutu -->
        <div class="row mb-4">
            <div class="col-md-6 text-center">
                <a href="@Url.Action("Index", "Category")" class="card text-decoration-none">
                    <div class="card-body border border-primary p-5">
                        <h2>Kategoriler</h2>
                    </div>
                </a>
            </div>

            <!-- Ürünler Kutu -->
            <div class="col-md-6 text-center">
                <a href="@Url.Action("Index", "Product")" class="card text-decoration-none">
                    <div class="card-body border border-primary p-5">
                        <h2>Ürünler</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
