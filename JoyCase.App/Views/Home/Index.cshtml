@using JoyCase.App.Models.CategoryModel
@using JoyCase.App.Models.ProductModel
@{
    ViewData["Title"] = "JoyCase By B.H.A.";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Kategoriler (Yan Yana Küçük Yazı) -->
    <section class="container mt-4">
        <h2 class="text-center">Kategoriler</h2>

        <div class="text-center">
            @foreach (var item in ViewBag.Categories as List<GetCategoryResponseModel>)
            {
                <span class="mx-2"> @item.Name</span>
            }
        </div>
    </section>

    <!-- Ürünler (Kutucuklar) -->
    <section class="container mt-4">
        <h2 class="text-center">Ürünler</h2>
        <div class="row">
            @foreach (var item in ViewBag.Products as List<GetProductResponseModel>)
            {
                <div class="col-md-3 text-center border p-3 m-2 shadow-sm">
                    <img src="https://via.placeholder.com/150" alt="Ürün @item.ProductId" class="img-fluid">
                    <p class="mt-2">@item.ProductName</p>
                </div>
            }

            @*    @for (int i = 1; i <= 4; i++)
            {
            <div class="col-md-3 text-center border p-3 m-2 shadow-sm">
            <img src="https://via.placeholder.com/150" alt="Ürün @i" class="img-fluid">
            <p class="mt-2">@item.ProductName</p>
            </div>
            } *@
        </div>
        <div class="text-center mt-3">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Tüm Ürünleri Gör</a>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
